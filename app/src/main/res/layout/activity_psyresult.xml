<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:htext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Psyresult"
    >
    <TextView
        android:layout_width="230dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/success"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:textSize="30sp"
        android:textColor="@color/bgColor"
        android:text="You are likely to succeed at"
        android:layout_centerHorizontal="true" />
    <com.hanks.htextview.HTextView
            android:id="@+id/text_animate_psy"
            android:layout_width="match_parent"
            android:layout_height="200dp"
        android:layout_below="@+id/success"
            android:background="@color/bgColor"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            htext:animateType="line" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:id="@+id/data"
        android:layout_below="@+id/text_animate_psy"
        android:textColor="#000000"
        android:padding="15dp"
        android:textSize="25sp"
        android:text="So this is about all careers" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Result"
        android:id="@+id/button6_psy"
        android:background="@drawable/button"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:backgroundTint="@color/regbg"
        android:layout_centerHorizontal="true" />

</RelativeLayout>