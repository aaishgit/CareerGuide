<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="620dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/bgColor">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_frag_det"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:drawableLeft="@mipmap/name2"
        android:background="@drawable/edittext"
        android:ems="10"
        android:id="@+id/editText_frag_name"
        android:layout_below="@+id/imageView_frag_det"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:hint="Full Name"
        android:textAlignment="center"
        android:editable="true"
        android:paddingBottom="0dp"
        android:textSize="20sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:drawableLeft="@mipmap/calendar2"
        android:background="@drawable/edittext"
        android:ems="10"
        android:id="@+id/textview_frag_class"
        android:layout_marginBottom="28dp"
        android:textColor="#000000"
        android:layout_below="@+id/editText_frag_name"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:editable="false"
        android:gravity="center_vertical"
        android:hint="Year"
        android:textSize="20sp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/button9_frag"
        android:background="@drawable/button"
        android:layout_below="@+id/textview_frag_class"
        android:layout_centerHorizontal="true"
        android:textColor="@color/bgColor" />
</RelativeLayout>
